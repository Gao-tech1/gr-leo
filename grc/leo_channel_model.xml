<?xml version="1.0"?>
<block>
  <name>Channel Model</name>
  <key>leo_channel_model</key>
  <import>import leo</import>
  <make>leo.channel_model($sample_rate, $model, $noise_type, $snr)</make>
  
  <param>
      <name>Ignore Me</name>
      <key>value</key>
      <value>'fine'</value>
      <type>raw</type>
      <hide>all</hide>
  </param>
  
  <param>
    <name>Sampling Rate</name>
    <key>sample_rate</key>
    <type>float</type>
  </param>	
  
  <param>
    <name>Channel Model</name>
    <key>model</key>
    <value>model_variable</value>
    <type>raw</type>
  </param>
  
  <param>
    <name>Noise</name>
    <key>noise_type</key>
    <value>1</value>
    <type>enum</type>
    <option>
        <name>None</name>
        <key>0</key>
    </option>
    <option>
        <name>White Gaussian</name>
        <key>1</key>
    </option>
  </param>
  
  <param>
    <name>Noise-floor (dBW)</name>
    <key>snr</key>
    <value>10</value>
    <type>float</type>
        <hide>#if int($noise_type())==0 then 'all' else 'none'#</hide>
  </param>	
    
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>	
   
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  
  <source>
	<name>csv</name>
	<type>message</type> 
	<optional>1</optional>
  </source>
  
</block>
