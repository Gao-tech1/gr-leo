<?xml version="1.0"?>
<block>
  <name>Channel Model</name>
  <key>leo_channel_model</key>
  <import>import leo</import>
  <make>leo.channel_model($sample_rate, $model, $tracker, $mode)</make>
  
  <param>
      <name>Ignore Me</name>
      <key>value</key>
      <value>'fine'</value>
      <type>raw</type>
      <hide>all</hide>
  </param>
  
  <param>
    <name>Sampling Rate</name>
    <key>sample_rate</key>
    <type>float</type>
  </param>	
  
  <param>
    <name>Channel Model</name>
    <key>model</key>
    <value>model_variable</value>
    <type>raw</type>
  </param>
  
  <param>
    <name>Tracker</name>
    <key>tracker</key>
    <value>tracker_variable</value>
    <type>raw</type>
  </param>
  
  <param>
    <name>Mode</name>
    <key>mode</key>
    <value>0</value>
    <type>enum</type>
    <option>
        <name>Uplink</name>
        <key>0</key>
    </option>
    <option>
        <name>Downlink</name>
        <key>1</key>
    </option>
  </param>
  	 
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>	
   
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  
</block>
